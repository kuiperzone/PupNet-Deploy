<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <metadata_license>MIT</metadata_license>

    <id>${APP_ID}</id>
    <name>${APP_FRIENDLY_NAME}</name>
    <summary>${APP_SHORT_SUMMARY}</summary>
    <url type="homepage">${PUBLISHER_LINK_URL}</url>
    <project_license>${APP_LICENSE_ID}</project_license>
    <content_rating type="oars-1.1" />

    <developer id="${PUBLISHER_ID}">
        <name>${PUBLISHER_NAME}</name>
    </developer>

    <launchable type="desktop-id">${APP_ID}.desktop</launchable>

    <description>
        ${APPSTREAM_DESCRIPTION_XML}
    </description>

    <!-- Freedesktop Categories -->
    <categories>
        <category>Development</category>
        <category>Utility</category>
    </categories>

    <keywords>
        <keyword translate="no">appimage</keyword>
        <keyword translate="no">flatpak</keyword>
        <keyword translate="no">dotnet</keyword>
        <keyword translate="no">csharp</keyword>
        <keyword>installation</keyword>
        <keyword>development</keyword>
        <keyword>programming</keyword>
        <keyword xml:lang="de">entwicklung</keyword>
        <keyword xml:lang="de">programmierung</keyword>
        <keyword translate="no">windows</keyword>
        <keyword translate="no">linux</keyword>
        <keyword translate="no">setup</keyword>
        <keyword translate="no">debian</keyword>
        <keyword translate="no">rpm</keyword>
    </keywords>

    <screenshots>
        <screenshot type="default">
            <image>https://raw.githubusercontent.com/kuiperzone/PupNet-Deploy/main/Media/Screenie-PupNet.png</image>
        </screenshot>
    </screenshots>

    <releases>
        ${APPSTREAM_CHANGELOG_XML}
    </releases>

</component>
